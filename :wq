---
apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: tomcat-rs
  labels:
    author: supraja
    app: appserver
spec:
  replicas: 2
  selector:
    matchLabels:
      app: appserver
    template:
      metadata:
        labels:
          app: appserver
      spec:
        containers:
          - name: my-tomcat
            image: tomee
            ports:
              - containerPort: 8080
                hostPort: 9090
...
